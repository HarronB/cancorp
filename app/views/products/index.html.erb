<h1>Products#index</h1>
<p>Find me in app/views/products/index.html.erb</p>


<h2> List of Products </h2>



           <%= render partial: 'products/product',
                      collection: @products,
                      locals: {show_links: true} %>


<div class ="container text-center">
  <% @products.each do |prod| %>
    <% if prod.image.present? %>
		  <p> <%= image_tag prod.image.thumbnail.url %> </p>
  	<% end %>
  <% end%>
</div >


<h1> test area </h1>
<h3 class="text-center">Products for Sale</h3>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @products.each do |product| %>
      <%= render "product_row", product: product, order_product: @order_product %>
    <% end %>
  </div>
</div>


  <%= link_to_next_page @products, 'Next Page' %>
<%= paginate @products %>


